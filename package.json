{
  "name": "always-coder",
  "version": "1.0.0",
  "private": true,
  "description": "Remote AI coding agent control system with AWS backend",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @always-coder/shared build && pnpm --filter @always-coder/cli build",
    "bootstrap": "pnpm install && pnpm build:cli && echo 'âœ“ Setup complete! Run: pnpm always claude'",
    "test": "pnpm -r test",
    "test:integration": "pnpm -r test:integration",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck",
    "check": "pnpm lint && pnpm build:cli",
    "always": "node packages/cli/dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
