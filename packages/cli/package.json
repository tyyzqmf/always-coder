{
  "name": "@always-coder/cli",
  "version": "1.1.0",
  "description": "Remote AI coding agent control - access Claude, Codex, and other AI assistants from anywhere",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "always": "./dist/index.js"
  },
  "keywords": [
    "ai",
    "claude",
    "codex",
    "remote",
    "terminal",
    "pty",
    "websocket",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tyyzqmf/always-coder.git",
    "directory": "packages/cli"
  },
  "author": "tyyzqmf",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc && chmod +x dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@always-coder/shared": "^1.1.0",
    "amazon-cognito-identity-js": "^6.3.16",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "bun-types": "^1.0.25",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
